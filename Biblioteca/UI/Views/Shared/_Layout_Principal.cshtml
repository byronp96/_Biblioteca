    function pMostrarParametrosCompañia(pvcControlador) {
        debugger;

        //Bloquea la pantalla
        //BloquearPantalla();

        //Realiza la llamada
        $.ajax({
            //pvcData, string pvbAgregar, string pvbBorrar, string pvbEditar, string pvbCopiar, string pvbImprimir, string pvbAyudar, bool pvbEsCreacion = false, bool pvbEsCopia = false)
            method: 'POST',
            url: '../' + pvcControlador + '/Index/',
            success: function (partialResult) {
                debugger;
                //Desbloquea la pantalla
                //DesbloquearPantalla();
                //DEspliega el html
                $("#pnlPantallas").html('');
                $("#pnlPantallas").html(partialResult);


            },
            complete: function (partialResult) {


            },
            error: function () {
                //Desbloquea la pantalla
                //DesbloquearPantalla();
                //pMostrarMensaje("Error", "Esto es vergonzoso, algo ocurrio con la comunicación.", 4);
            }
        });
    }

    function pAccion(pvcControlador, pvcAccion, pvcId = '')
    {
        debugger;

        //Bloquea la pantalla
        //BloquearPantalla();

        //Realiza la llamada
        if (pvcId != '') {
            $.ajax({

                method: 'POST',
                url: pvcControlador + '/' + pvcAccion,
                data: {
                    'id': pvcId
                },
                success: function (partialResult) {
                    debugger;
                    //Desbloquea la pantalla
                    //DesbloquearPantalla();
                    //DEspliega el html
                    $("#pnlPantallas").html('');
                    $("#pnlPantallas").html(partialResult);
                },
                complete: function (partialResult) { },
                error: function () { }
            });
        }
        else {
            $.ajax({

                method: 'POST',
                url: pvcControlador + '/' + pvcAccion,
                success: function (partialResult) {
                    debugger;
                    //Desbloquea la pantalla
                    //DesbloquearPantalla();
                    //DEspliega el html
                    $("#pnlPantallas").html('');
                    $("#pnlPantallas").html(partialResult);
                },
                complete: function (partialResult) { },
                error: function () { }
            });

        }
    }
</script>